{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "C Debug",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/servidor",
		"args": [],
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"signal": "SIGINT",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  }
		],
		"preLaunchTask": "build"  // This line specifies the build task to run before launching the debugger
	  }
	]
  }